<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/btnoperationDOWN">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                    android:angle="90"
                    android:startColor="#ff00bdff"
                    android:centerColor="#ff0275ca"
                    android:endColor="@color/btnoperationDOWN"
                    />
            <stroke android:color="#ffffff" android:width="2dp" />
            <corners android:radius="@dimen/CornerRadius"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:color="#000000" android:width="2dp" />
            <corners android:radius="@dimen/CornerRadius"/>
            <gradient
                    android:angle="-90"
                    android:startColor="#ff5cb712"
                    android:centerColor="#ff116e07"
                    android:endColor="#ff0c5607"
                    />

        </shape>
    </item>
</selector>